# ft=sh

# File aliases
#
alias l="ls -F -G -lah"
alias ll="ls -l"
alias la="ls -a"
alias lsd='ls -ld *(-/DN)'
alias md='mkdir -p'
alias rd='rmdir'
alias cd..='cd ..'
alias ..='cd ..'
alias md='mkdir -p'
alias rd='rmdir'

# Git
#
alias log="git log --no-merges --name-only"
alias gprev="git diff -w HEAD"
alias gprevs="git diff -w --staged HEAD"
gcr() {
  git checkout -b $1 origin/$1
}
alias gstash="git stash save 'checkout save'"
alias gpop="git stash pop"
alias gap='git add -p'
alias gb='git branch'
alias gc='git commit -v'
alias gca='git commit -a -v'
alias gcl='git clean -f -d'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdh='git diff HEAD'
alias gl='git pull'
alias glg='git log --graph --oneline --decorate --color --all'
alias glod='git log --oneline --decorate'
alias glp='git log -p'
alias gnap='git add -N --ignore-removal . && gap && gref'
alias gp='git push'
alias gplease='git push --force-with-lease'
alias gpr='git pull --rebase'
alias gr='git rebase'
alias gra='git rebase --abort'
alias grc='git rebase --continue'
alias grim='git rebase -i main'
alias gst='git status'
alias reset-authors='git commit --amend --reset-author -C HEAD'

# Applications
#
alias ec='emacsclient -c -n -a ""'
alias e='emacsclient -t -a ""'
alias mux=tmuxinator
alias ue='cd ~/.emacs.d && git pull origin develop'
if command -v nvim 2>&1 >/dev/null; then
  alias vim='nvim'
fi

# Misc
#
alias spacer="defaults write com.apple.dock persistent-apps -array-add '{\"tile-type\"=\"spacer-tile\";}'; killall Dock"
alias cdd="rm -rf ~/Library/Developer/Xcode/DerivedData"

# Shortcuts
alias swiftgen="swiftgen config run --config .swiftgen.yml"
alias be="bundle exec"
alias fl="bundle exec fastlane"
