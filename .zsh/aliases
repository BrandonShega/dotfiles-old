# ft=sh

# File aliases
#
alias l="ls -F -G -lah"
alias ll="ls -l"
alias la="ls -a"
alias lsd='ls -ld *(-/DN)'
alias md='mkdir -p'
alias rd='rmdir'
alias cd..='cd ..'
alias ..='cd ..'
alias md='mkdir -p'
alias rd='rmdir'

# Git
#
alias gst='git status'
alias wta='git worktree add'
alias wtr='git worktree remove'
alias wtl='git worktree list'
alias wtp='git worktree prune'

# Applications
#
alias ec='emacsclient -c -n -a ""'
alias e='emacsclient -t -a ""'
alias mux=tmuxinator
alias ue='cd ~/.emacs.d && git pull origin develop'
if command -v nvim 2>&1 >/dev/null; then
  alias vim='nvim'
fi

# Misc
#
alias spacer="defaults write com.apple.dock persistent-apps -array-add '{\"tile-type\"=\"spacer-tile\";}'; killall Dock"
alias cdd="rm -rf ~/Library/Developer/Xcode/DerivedData"

# Shortcuts
alias swiftgen="swiftgen config run --config .swiftgen.yml"
alias be="bundle exec"
alias fl="bundle exec fastlane"
